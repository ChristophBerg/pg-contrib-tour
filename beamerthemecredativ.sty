\ProvidesPackage{beamerthemecredativ}

\RequirePackage{pgf}

\mode<presentation>

\pgfdeclareimage[height=0.8cm]{credativ-logo}{images/credativ-logo}
\pgfdeclareimage[width=1.00\paperwidth]{credativ-background}{images/credativ-background}

\usetheme{Boadilla}
\usecolortheme{seagull}
\usefonttheme{professionalfonts}

\setbeamertemplate{background canvas}{\pgfuseimage{credativ-background}}

\logo{\pgfuseimage{credativ-logo}}

\setbeamertemplate{footline}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%

% ---- Standardmäßig wird im Footer Name + Institut (bei ----
% ---- uns "credativ GmbH") angezeigt, dafür ist bei den ----
% ---- meisten Mitarbeiten der Platz zu klein.           ----
%
% ---- Nur den Firmennamen anzeigen:
%    \usebeamerfont{author in head/foot}\insertshortinstitute%
% ---- Alternativ nur den Autor anzeigen:
     \usebeamerfont{author in head/foot}\insertshortauthor%

  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{title in head/foot}%
    \usebeamerfont{title in head/foot}\insertshorttitle
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,right]{date in head/foot}%
    \usebeamerfont{date in head/foot}\insertshortdate{}\hspace*{2em}
    \insertframenumber{} / \inserttotalframenumber\hspace*{2ex} 
  \end{beamercolorbox}}%
  \vskip0pt%
}

\mode
<all>
